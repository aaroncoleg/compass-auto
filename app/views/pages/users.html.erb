<table style="max-width:1100px;">
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Position</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% User.where.not(id: current_user.id).each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.first_name + ' ' + user.last_name %></td>
    <td><%= Role.find(user.role_id).name %></td>
    <td class="link"><%= link_to 'Change position', user %></td>
  </tr>
<% end %>
  </tbody>
</table>